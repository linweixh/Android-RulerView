<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.czkj.animationdemo.MainActivity">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/value"
            android:textColor="#4ABB73"
            android:text="50.0"
            android:textSize="64sp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/unit"
            android:textSize="22sp"
            android:layout_toRightOf="@+id/value"
            android:layout_alignTop="@+id/value"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:text="kg"
            android:textColor="#4ABB73"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <com.czkj.animationdemo.widget.RulerView
        android:id="@+id/ruler"
        android:layout_marginTop="10dp"
        android:background="#F6F9F6"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

</LinearLayout>
